            <androidx.cardview.widget.CardView
                android:id="@+id/cvCommon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutCommonOwnerOr"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Owner/Broker*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvCommonOwnerOr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="none"
                            android:paddingStart="14dp"
                            android:textColor="@color/gray_text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutCommonSaleOr"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="For Sale/Rent/Exchange*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCommonOwnerOr"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvCommonSaleOr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="none"
                            android:paddingStart="14dp"
                            android:textColor="@color/gray_text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutCommonPrice"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Price Birr*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCommonSaleOr"
                        app:startIconTint="@color/orange_main">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCommonPrice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:paddingStart="14dp"
                            android:textColor="@color/gray_text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutCommonDesc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Description*"
                        android:textColorHint="@color/hint_text"
                        app:counterEnabled="true"
                        app:counterMaxLength="1000"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCommonPrice"
                        app:startIconTint="@color/orange_main">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCommonDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="textMultiLine"
                            android:paddingStart="14dp"
                            android:singleLine="false"
                            android:textColor="@color/gray_text"
                            android:textSize="16sp"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutCommonPhone"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Phone Number*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCommonDesc"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvCommonPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:paddingStart="14dp"
                            android:textColor="@color/gray_text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnUpdatePost"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange_main"
                        android:text="UPDATE"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:iconTint="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCommonPhone" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>