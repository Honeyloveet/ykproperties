                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Condition*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutColor"
                        app:placeholderText="Brand New"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvCondition"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="none"
                            android:textColor="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutTransmission"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Transmission*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCondition"
                        app:placeholderText="Automatic"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvTransmission"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="none"
                            android:textColor="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutMileage"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Mileage (km)"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutTransmission"
                        app:placeholderText="28000"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvMileage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:paddingStart="14dp"
                            android:textSize="16sp"
                            android:textColor="@color/gray_text"
                            android:textColorHint="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutFuel"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Fuel*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutMileage"
                        app:placeholderText="Gasoline"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvFuel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="none"
                            android:textColor="@color/gray_text"
                            android:textColorHint="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutPlate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Plate No"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutFuel"
                        app:placeholderText="2-A70xxx"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvPlate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:paddingStart="14dp"
                            android:textSize="16sp"
                            android:textColor="@color/gray_text"
                            android:textColorHint="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutEngineSize"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Engine Size (CC)"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPlate"
                        app:placeholderText="1300"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvEngineSize"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:paddingStart="14dp"
                            android:textSize="16sp"
                            android:textColor="@color/gray_text"
                            android:textColorHint="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutHouseType"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="House Type*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:placeholderText="G+1/Villa/Condominium/etc..."
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvHouseType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:paddingStart="14dp"
                            android:textColor="@color/gray_text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutHouseLocation"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Location*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutHouseSize"
                        app:placeholderText="Jemo1/Gerji/etc.."
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvHouseLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:paddingStart="14dp"
                            android:textSize="16sp"
                            android:textColor="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutHouseSize"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="House Size(Meter Square)*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutHouseType"
                        app:placeholderText="500"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvHouseSize"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:paddingStart="14dp"
                            android:textSize="16sp"
                            android:textColor="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutLandLocation"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Location*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:placeholderText="Jemo1/Gerji/etc.."
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvLandLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:paddingStart="14dp"
                            android:textSize="16sp"
                            android:textColor="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutLandSize"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Land Size(Meter Square)*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutLandLocation"
