                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="1dp"
                        android:hint="Model*"
                        android:textColorHint="@color/hint_text"
                        app:boxStrokeColor="@color/orange_main"
                        app:endIconTint="@color/orange_main"
                        app:hintTextColor="@color/orange_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutMake"
                        app:placeholderText="Model*"
                        app:startIconTint="@color/orange_main">

                        <AutoCompleteTextView
                            android:id="@+id/autoComTvModel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingStart="14dp"
                            android:textSize="16sp"
                            android:inputType="text"
                            android:textColor="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutYear"
